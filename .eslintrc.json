{
    "root": true,
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": "./tsconfig.json" },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "node_modules/*",
        "dist/*",
        "dev/*",
        "doc/*"
    ]
}